<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_marginBottom="5dp"
              android:layout_height="140dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        app:cardMaxElevation="3dp"
        app:cardBackgroundColor="@color/white"
        android:layout_height="140dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="140dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:gravity="left|center"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="10dp"></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Equipment name"
                            android:layout_gravity="left|center"
                            android:textColor="#000000"
                            android:layout_alignParentLeft="true"
                            android:layout_centerVertical="true"
                            android:textSize="14dp"
                            android:layout_marginLeft="20dp"
                            android:id="@+id/equipment_name"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/sourcesanspro_regular"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:text="Maintenance"
                            android:layout_gravity="left|center"
                            android:textColor="@color/colorAccent"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textSize="14dp"
                            android:layout_marginRight="20dp"
                            android:id="@+id/equipment_status"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:fontFamily="@font/sourcesanspro_regular"
                            />
                    </RelativeLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="equipmentId"
                    android:layout_gravity="left|center"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/equipment_id"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="6dp"></LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:text="07:30:09"
                    android:layout_gravity="left|center"
                    android:textColor="#000000"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textSize="14dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/time_text"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:fontFamily="@font/sourcesanspro_regular"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@color/gray_btn_bg_pressed_color"
                android:layout_height="1dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="5dp"></LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:weightSum="1.0"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Completed"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/complete"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="6dp"></LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="7"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/completed_count"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Pending"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/pending"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="6dp"></LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="08"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/pending_count"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="0.33"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="Up coming"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/upcoming"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="6dp"></LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="09"
                        android:textColor="#000000"
                        android:textSize="14dp"
                        android:id="@+id/upcoming_count"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:fontFamily="@font/sourcesanspro_regular"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
