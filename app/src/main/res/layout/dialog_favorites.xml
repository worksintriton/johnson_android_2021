<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/round_corners"
        android:backgroundTint="@color/colorAccent">

        <TextView
            android:id="@+id/select_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Select station type"
            android:textColor="#ffffff"
            android:textSize="18dp" />

        <Button
            android:id="@+id/elevated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/select_type"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners_button"
            android:backgroundTint="#fff"
            android:text="Elevated"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />

        <Button
            android:id="@+id/underground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/elevated"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/round_corners_button"
            android:backgroundTint="#fff"
            android:text="Underground"
            android:textColor="@color/colorAccent"
            android:textSize="15dp" />
    </RelativeLayout>
</RelativeLayout>

